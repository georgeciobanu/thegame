<% @email_updates.each do |email_update| %>
  <tr>
    <td><%= email_update.subject %></td>
    <td><%= email_update.message %></td>
    <td><%= email_update.date_sent %></td>
    <td><%= link_to 'Show', email_update %></td>
    <td><%= link_to 'Destroy', email_update, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

